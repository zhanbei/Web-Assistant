{
	"name": "Web Assistant",
	"manifest_version": 2,
	"description": "A web assistant to add custom buttons to execute custom scripts.",
	"version": "0.8",
	"icons": {
		"16": "icon.png",
		"32": "icon.png",
		"48": "icon.png",
		"128": "icon.png"
	},
	"browser_action": {
		"default_icon": "icon.png",
		"default_popup": "popup.html",
		"default_title": "Web Assistant"
	},
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"contents.js"
			],
			"run_at": "document_idle"
		}
	],
	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},
	"permissions": [
		"tabs",
		"*://*/*",
		"storage"
	]
}